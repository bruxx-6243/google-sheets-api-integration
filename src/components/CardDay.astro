---
interface Props {
  day: string;
  hours: string;
}
const { day, hours } = Astro.props;
---

<div>
  <h4>{day}</h4>
  <p>{hours}</p>
</div>

<style>
  div {
    width: 250px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    column-gap: 1.2rem;

    border: 1px solid white;
    padding: 1rem 2rem;
  }
</style>
